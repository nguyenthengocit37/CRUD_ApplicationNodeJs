<div class="container mt-5">
    <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Tên</th>
      <th scope="col">Giá</th>
      <th scope="col">Thời Gian Tạo</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
        {{#each product}}
    <tr>
      <th scope="row"> {{ sum @index 1}}</th>
      <td>{{this.name}}</td>
      <td>{{this.price}}</td>
      <td>{{formatDate this.createdAt}}</td>
      <td>
          <a href="/product/edit/{{this._id}}" class=""btn btn-primary>Sửa</a>
           <a href="" class=""btn btn-primary>Xóa</a>
      </td>
    </tr>
      {{/each}}
  </tbody>
</table>
</div>